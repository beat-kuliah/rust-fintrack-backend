# Production Environment Configuration for 2CPU 2GB RAM
# Database Configuration - Optimized for connection timeout issues (2CPU 2GB RAM)
DATABASE_URL=postgresql://postgres:Admin123@postgres.local:5432/fintrack_rust
DB_MAX_CONNECTIONS=15
DB_MIN_CONNECTIONS=4
DB_ACQUIRE_TIMEOUT_SECS=20
DB_IDLE_TIMEOUT_SECS=180
DB_MAX_LIFETIME_SECS=1800

# Redis Configuration - Minimal for caching
REDIS_ADDR=redis.local:6379
REDIS_PASSWORD=Admin123
REDIS_DB=0
REDIS_ENABLED=true
REDIS_MAX_CONNECTIONS=4
REDIS_MIN_CONNECTIONS=1

# Application Configuration
RUST_LOG=info
JWT_SECRET=your-production-jwt-secret-here
JWT_EXPIRATION_HOURS=24

# Server Configuration
HOST=0.0.0.0
PORT=8080

# Cache Configuration
CACHE_TTL_SECONDS=300
ENABLE_CACHE=true

# Connection Monitoring
CONNECTION_MONITOR_INTERVAL_SECS=30
CONNECTION_HEALTH_CHECK_INTERVAL_SECS=60